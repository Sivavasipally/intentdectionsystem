# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Database
DB_URL=sqlite:///./data/app.db
# DB_URL=postgresql://user:password@localhost:5432/intent_db

# Vector Store
VECTOR_DIR=./data/indexes

# Default Tenant
TENANT=bank-asia

# Default Language
LANGUAGE=en-IN

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Intent Detection
MIN_CONFIDENCE=0.7
OOD_THRESHOLD=0.6

# RAG Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=120
RETRIEVAL_TOP_K=6

# Redis (optional)
# REDIS_URL=redis://localhost:6379/0

# Environment
ENV=development
