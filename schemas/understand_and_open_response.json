{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UnderstandAndOpenResponse",
  "type": "object",
  "required": ["intent", "confidence", "entities", "validated_from_kb", "citations", "traceId"],
  "properties": {
    "intent": {
      "type": "string",
      "description": "Detected intent"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score"
    },
    "entities": {
      "type": "object",
      "description": "Extracted entities"
    },
    "validated_from_kb": {
      "type": "boolean",
      "description": "Whether entities were validated against knowledge base"
    },
    "citations": {
      "type": "array",
      "description": "Knowledge base citations",
      "items": {
        "type": "object",
        "required": ["doc", "snippet"],
        "properties": {
          "doc": {
            "type": "string",
            "description": "Document name"
          },
          "page": {
            "type": ["integer", "null"],
            "description": "Page number"
          },
          "snippet": {
            "type": "string",
            "description": "Relevant text snippet"
          },
          "score": {
            "type": ["number", "null"],
            "description": "Relevance score"
          }
        }
      }
    },
    "channel_record": {
      "type": ["object", "null"],
      "description": "Created channel record",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      }
    },
    "traceId": {
      "type": "string",
      "description": "Trace ID"
    },
    "error": {
      "type": ["string", "null"],
      "description": "Error message if any"
    }
  }
}
